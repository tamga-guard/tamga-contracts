{
  "$id": "https://tamga-guard.github.io/tamga-contracts/contracts/event.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "SemVer: 1.0.0",
  "title": "Tamga Event v1",
  "type": "object",

  "examples": [
    { "$ref": "../samples/sample_event_1.json" },
    { "$ref": "../samples/sample_event_2.json" },
    { "$ref": "../samples/sample_event_3.json" },
    { "$ref": "../samples/sample_event_4.json" }
  ],

  "required": ["idempotency_key", "state", "host", "ts_utc"],

  "properties": {
    "idempotency_key": { "type": "string", "minLength": 8 },

    "state": {
      "type": "string",
      "enum": [
        "NEW", "PRE_FILTER", "WATCH", "RISING", "CRITICAL",
        "PROOF_READY", "COOLING", "ARCHIVED"
      ]
    },

    "host": { "type": "string", "description": "domain or subdomain" },

    "labels": {
      "type": "array",
      "items": { "type": "string" }
    },

    "google": {
      "type": "object",
      "properties": {
        "position": { "type": ["integer", "null"], "minimum": 1 },
        "ts_utc":   { "type": ["string", "null"], "format": "date-time" }
      },
      "additionalProperties": false
    },

    "probe": {
      "type": "object",
      "description": "lightweight HTTP/SSL probe result",
      "properties": {
        "status":     { "type": ["integer", "null"], "minimum": 0 },
        "title":      { "type": ["string", "null"] },
        "tls_issuer": { "type": ["string", "null"] },
        "redirects":  {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },

    "whois": {
      "type": "object",
      "description": "RDAP/WHOIS normalized fields",
      "properties": {
        "created":   { "type": ["string", "null"], "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
        "registrar": { "type": ["string", "null"] },
        "country":   { "type": ["string", "null"], "minLength": 2, "maxLength": 2 }
      },
      "additionalProperties": true
    },

    "risk_flags": {
      "type": "array",
      "items": { "type": "string" }
    },

    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "uri"],
        "properties": {
          "type": { "type": "string", "enum": ["screenshot", "html", "headers", "pcap", "pdf"] },
          "uri":  { "type": "string" },
          "hash": { "type": ["string", "null"], "pattern": "^sha256:[0-9a-fA-F]{64}$" }
        },
        "additionalProperties": false
      }
    },

    "ts_tr":  { "type": ["string", "null"], "description": "local time (optional)" },
    "ts_utc": { "type": "string", "format": "date-time" }
  },

  "additionalProperties": true
}
