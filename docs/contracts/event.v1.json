{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tamga Event v1",
  "type": "object",
  "required": ["idempotency_key", "state", "host", "ts_utc"],
  "properties": {
    "idempotency_key": { "type": "string", "minLength": 8 },
    "state": {
      "type": "string",
      "enum": ["NEW", "PRE_FILTER", "WATCH", "RISING", "CRITICAL", "PROOF_READY", "COOLING", "ARCHIVED"]
    },
    "host": { "type": "string", "description": "domain or subdomain" },
    "labels": { "type": "array", "items": { "type": "string" } },
    "google": {
      "type": "object",
      "properties": {
        "position": { "type": ["integer", "null"], "minimum": 1 },
        "ts_utc": { "type": ["string", "null"], "format": "date-time" }
      },
      "additionalProperties": false
    },
    "probe": { "type": "object", "description": "lightweight HTTP/SSL probe result" },
    "whois": { "type": "object", "description": "RDAP/WHOIS normalized fields" },
    "risk_flags": { "type": "array", "items": { "type": "string" } },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "uri"],
        "properties": {
          "type": { "type": "string", "enum": ["screenshot", "html", "headers", "pcap", "pdf"] },
          "uri": { "type": "string" },
          "hash": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "ts_tr": { "type": ["string", "null"], "description": "local time (optional)" },
    "ts_utc": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": true
}
