{
  "$id": "https://tamga-guard.github.io/tamga-contracts/contracts/event.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "SemVer: 1.0.0",
  "title": "Tamga Event v1",
  "type": "object",

  "examples": [
    { "$ref": "../samples/sample_event_1.json" },
    { "$ref": "../samples/sample_event_2.json" },
    { "$ref": "../samples/sample_event_3.json" },
    { "$ref": "../samples/sample_event_4.json" }
  ],

  "required": [
    "idempotency_key",
    "project_id",
    "stage",
    "state",
    "host",
    "ts_utc"
  ],

  "properties": {
    "idempotency_key": { "type": "string", "minLength": 16 },
    "idempotency_hash": {
      "type": "string",
      "pattern": "^sha256:[0-9a-fA-F]{64}$",
      "description": "Opsiyonel: idempotency_key'in SHA-256 heşi"
    },

    "project_id": { "type": "string", "minLength": 2, "description": "brand→project resolver çıktısı" },

    "stage": {
      "type": "string",
      "enum": ["ct", "probe", "serp"],
      "description": "Teknik üretim aşaması: ct (CT besi), probe (HTTP/SSL keşfi), serp (Google)"
    },

    "state": {
      "type": "string",
      "enum": [
        "NEW", "PRE_FILTER", "WATCH", "RISING", "CRITICAL",
        "PROOF_READY", "COOLING", "ARCHIVED"
      ],
      "description": "İş/operasyon durumu (panelde rozetlere karşılık gelir)"
    },

    "host": {
      "type": "string",
      "description": "Gözlenen FQDN (domain veya subdomain)"
    },

    "domain": {
      "type": "object",
      "description": "Alan adı çözümleri (opsiyonel ama faydalı)",
      "properties": {
        "registrable": { "type": ["string", "null"] },
        "tld":         { "type": ["string", "null"] },
        "apex":        { "type": ["string", "null"] }, 
        "subdomain":   { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },

    "labels": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Serbest etiketler (örn. Google, Redirect, Kanonik Hedef)"
    },

    "risk_flags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Kuralların ürettiği bayraklar (örn. registrar_risky, age_lt_7d)"
    },

    "risk_score": {
      "type": "number",
      "minimum": 0,
      "description": "0–100 ölçekli birleşik risk puanı (opsiyonel)"
    },

    "google": {
      "type": "object",
      "description": "SERP sinyalleri (stage=serp iken dolar)",
      "properties": {
        "position": { "type": ["integer", "null"], "minimum": 1 },
        "query_variant": { "type": ["string", "null"] },
        "ts_utc":   { "type": ["string", "null"], "format": "date-time" }
      },
      "additionalProperties": false
    },

    "probe": {
      "type": "object",
      "description": "Hafif HTTP/SSL keşfi (stage=probe iken dolar)",
      "properties": {
        "status":     { "type": ["integer", "null"], "minimum": 0 },
        "title":      { "type": ["string", "null"] },
        "tls_issuer": { "type": ["string", "null"] },
        "canonical_url": { "type": ["string", "null"] },
        "redirects":  {
          "type": "array",
          "items": { "type": "string" },
          "description": "İlk istekten kanoniğe giden yönlendirme zinciri"
        },
        "headers": {
          "type": "object",
          "description": "Seçilmiş yanıt başlıkları (örn. cf-ray, server)",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },

    "whois": {
      "type": "object",
      "description": "RDAP/WHOIS normalize alanları",
      "properties": {
        "created":   { "type": ["string", "null"], "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
        "registrar": { "type": ["string", "null"] },
        "nameservers": {
          "type": "array",
          "items": { "type": "string" }
        },
        "country":   { "type": ["string", "null"], "minLength": 2, "maxLength": 2 }
      },
      "additionalProperties": true
    },

    "evidence": {
      "type": "array",
      "description": "Delil paketine referanslar (S3/URL)",
      "items": {
        "type": "object",
        "required": ["type", "uri"],
        "properties": {
          "type": { "type": "string", "enum": ["screenshot", "html", "headers", "pcap", "pdf"] },
          "uri":  { "type": "string" },
          "hash": { "type": ["string", "null"], "pattern": "^sha256:[0-9a-fA-F]{64}$" }
        },
        "additionalProperties": false
      }
    },

    "source": {
      "type": "object",
      "description": "Kaynak meta (debug)",
      "properties": {
        "collector": { "type": ["string", "null"] },
        "pipeline_ver": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },

    "ts_tr":  { "type": ["string", "null"], "description": "Yerel zaman (opsiyonel, görsel amaçlı)" },
    "ts_utc": { "type": "string", "format": "date-time" }
  },

  "additionalProperties": true
}
